# Need to package the code first `tar zcf service_user.tar.gz $(ls)` and move it to the same directory as Dokerfile

# Compile the go code, you can specify the golang version
FROM golang:1.21-alpine as build
COPY . /go/src/service_user
WORKDIR /go/src/service_user
RUN tar zxf service_user.tar.gz
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /service_user cmd/service_user/main.go

# compressing binary files
#cd /
#upx -9 service_user


# building images with binary
FROM alpine:latest
MAINTAINER zhufuyi "g.zhufuyi@gmail.com"

# set the time zone to Shanghai
RUN apk add tzdata  \
    && cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime \
    && echo "Asia/Shanghai" > /etc/timezone \
    && apk del tzdata

# add curl, used for http service checking, can be installed without it if deployed in k8s
RUN apk add curl

COPY --from=build /service_user /app/service_user
COPY --from=build /go/src/service_user/configs/service_user.yml /app/configs/service_user.yml

# http port
EXPOSE 8080


WORKDIR /app

CMD ["./service_user", "-c", "configs/service_user.yml"]
# if you use the Configuration Center, service_user.yml is changed to the Configuration Center configuration.
#CMD ["./service_user", "-c", "configs/service_user.yml", "-enable-cc"]
